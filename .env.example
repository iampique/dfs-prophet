# DFS Prophet - Environment Configuration Example
# Copy this file to .env and update the values as needed

# =============================================================================
# QDRANT VECTOR DATABASE CONFIGURATION
# =============================================================================
# Qdrant server URL (local or cloud)
QDRANT_URL=http://localhost:6333
# Qdrant API key (required for cloud instances)
QDRANT_API_KEY=
# Request timeout in seconds (1-300)
QDRANT_TIMEOUT=30
# Prefer gRPC over HTTP for better performance
QDRANT_PREFER_GRPC=true

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Enable debug mode
DEBUG=true
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
# Application host
HOST=0.0.0.0
# Application port (1024-65535)
PORT=8000
# Number of worker processes (1-16)
WORKERS=1
# Allowed CORS origins
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# =============================================================================
# VECTOR DATABASE SETTINGS
# =============================================================================
# Collection names
VECTOR_DB_PLAYERS_COLLECTION=dfs_players
VECTOR_DB_LINEUPS_COLLECTION=dfs_lineups
VECTOR_DB_GAMES_COLLECTION=dfs_games
# Vector dimensions for embeddings (64-2048)
VECTOR_DB_VECTOR_DIMENSIONS=768
# Distance metric for vector similarity (Cosine, Euclid, Dot)
VECTOR_DB_DISTANCE_METRIC=Cosine
# Store payload on disk for memory efficiency
VECTOR_DB_ON_DISK_PAYLOAD=true
# Batch size for vector operations (1-1000)
VECTOR_DB_BATCH_SIZE=100
# Default search result limit (1-1000)
VECTOR_DB_SEARCH_LIMIT=100

# =============================================================================
# EMBEDDING MODEL SETTINGS
# =============================================================================
# HuggingFace model name for embeddings
EMBEDDING_MODEL_MODEL_NAME=BAAI/bge-base-en-v1.5
# Maximum sequence length for tokenization (128-2048)
EMBEDDING_MODEL_MAX_LENGTH=512
# Normalize embeddings for cosine similarity
EMBEDDING_MODEL_NORMALIZE_EMBEDDINGS=true
# Device for model inference (cpu, cuda, mps)
EMBEDDING_MODEL_DEVICE=cpu
# Batch size for embedding generation (1-128)
EMBEDDING_MODEL_BATCH_SIZE=32
# Use fast tokenizer for better performance
EMBEDDING_MODEL_USE_FAST_TOKENIZER=true
# Trust remote code from HuggingFace models
EMBEDDING_MODEL_TRUST_REMOTE_CODE=false

# =============================================================================
# BINARY QUANTIZATION SETTINGS
# =============================================================================
# Enable binary quantization for memory efficiency
BINARY_QUANTIZATION_ENABLED=true
# Keep quantized vectors in RAM
BINARY_QUANTIZATION_ALWAYS_RAM=false
# Compression ratio for binary quantization (0.1-1.0)
BINARY_QUANTIZATION_COMPRESSION_RATIO=0.25
# Quantile threshold for binary quantization (0.5-0.99)
BINARY_QUANTIZATION_QUANTILE_THRESHOLD=0.95
# Always keep quantized vectors in RAM
BINARY_QUANTIZATION_USE_ALWAYS_RAM=false

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
# Application environment (development, staging, production)
ENVIRONMENT=development
# Application version
VERSION=0.1.0
